<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeOutApplication.MainPage">

    <StackLayout Padding="10">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to inActivity Track" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Tap or Scroll on page within 1 minute to avoid session expire" FontSize="15" Padding="30,10,30,10"/>
        <Label Text="" FontSize="16" Padding="30,0,30,0"/>
        <Button Text="Click to navigate to other page" BackgroundColor="Red" TextColor="Black" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
